@{
    ViewBag.title = "index";
}
<html lang="pt-br" class="h-100">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>GM INVESTIMENTOS</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
        <script src="js/tata.js"></script>
    </head>
    <body class="h-100">
        <div class="bg-dark h-100 w-100 d-flex flex-column justify-content-center ">
            <div class="container bd-highlight bg-light align-self-center" style="width: 250px;">
                <div class="row text-center pt-2 pb-2">
                    <div class="col-lg-12">
                        <h3 class="fs-3">GM</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 mb-2">
                        <div class="input-group">
                            <label for="TxLogin" class="w-10 input-group-text rounded-0"><i class="bi bi-person-circle"></i></label>
                            <input class="form-control rounded-0" id="TxLogin" maxlength="20" type="text" placeholder="Usuário">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 mb-2">
                        <div class="input-group">
                            <label for="TxSenha" class="input-group-text rounded-0"><i class="bi bi-shield-lock-fill"></i></label>
                            <input class="form-control rounded-0" id="TxSenha" maxlength="20" type="password" placeholder="Senha">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 mb-2">
                        <button type="button" onclick="logar()" class="btn btn-success rounded-0 w-100 text-center">ENTRAR</button>
                    </div>
                </div>
            </div>
        </div>
        <script src="js/login.js"></script>
    </body>
</html>
